<div class="comments" id="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} Commented on {{format_date created_at}}
    </div>
    <div class="text" placeholder="Leave a comment here">
      {{comment_text}} 
    </div>
  </section>
  {{/each}}
</div>